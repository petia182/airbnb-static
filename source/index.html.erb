    <!-- Your banner code -->
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/background.jpg');">
      <div class="banner-content">
        <h1>WELCOME HOME</h1>
        <p>Rent unique places to stay from local hosts in 190+ countries. How it works
        </p>
        <%= link_to "How it works", "#", class: "btn btn-primary btn-lg"%>
      </div>
    </div>

    <!-- Your features code -->

    <div class="container text-center padded features">
        <div class="row">
        <% data.features.each do |feature, infos| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "#{feature}.png", class: "img" %>
            <h2><%= infos.title %></h2>
            <p><%= infos.description %></p>
          </div>
          <% end %>
      </div>
    </div>

    <!-- Your cards code -->
    <div class="wrapper-grey padded">
      <div class="container">
        <h2 class="text-center">Your next trip</h2>
        <div class="row">

          <% data.cards.each do |card, info| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path info.background_image %>');">
              <div class="card-category"><%= info.city %></div>
              <div class="card-description">
                <h2><%= info.name %></h2>
                <p><%= info.description%></p>
              </div>
              <%= image_tag info.avatar, class: "card-user avatar" %>
              <% link_to "", "#", class: "card-link" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Your newsletter code -->
    <div class="text-center padded newsletter">
      <h2>Get news from us</h2>
      <p>Leave us your mail and get news from us</p>
      <form class="form-inline">
        <input type="email" placeholder="petia_182@yahoo.com" class="form-control">
        <input type="submit" value="Subscribe" class="btn btn-primary">
      </form>
    </div>

